# API Configuration
# For local development, use the local API server
REACT_APP_API_URL=http://localhost:3001/api

# For production, update with your deployed API URL
# REACT_APP_API_URL=https://your-api-domain.com/api

# AWS Configuration for Amplify
REACT_APP_AWS_REGION=ap-southeast-2
REACT_APP_API_ENDPOINT=https://your-api-id.execute-api.ap-southeast-2.amazonaws.com/prod

# AWS Credentials (for local development only - use IAM roles in production)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# DynamoDB Environment (dev, staging, prod)
ENVIRONMENT=dev

# Stripe Configuration
# Get your keys from https://dashboard.stripe.com/test/apikeys
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Use DynamoDB (set to 'true' for production with DynamoDB, 'false' for local JSON files)
USE_DYNAMODB=false

# AWS Cognito Configuration
# Create a User Pool in AWS Cognito and get these values
COGNITO_USER_POOL_ID=your_user_pool_id_here
COGNITO_CLIENT_ID=your_client_id_here
REACT_APP_COGNITO_USER_POOL_ID=your_user_pool_id_here
REACT_APP_COGNITO_CLIENT_ID=your_client_id_here
REACT_APP_COGNITO_REGION=ap-southeast-2