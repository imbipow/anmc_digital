{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "API Gateway resource stack creation using Amplify CLI",
  "Parameters": {
    "apiName": {
      "Type": "String"
    },
    "serviceName": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    },
    "storagecontentdbName": {
      "Type": "String",
      "Default": "storagecontentdbName"
    },
    "storagecontentdbArn": {
      "Type": "String",
      "Default": "storagecontentdbArn"
    }
  },
  "Resources": {
    "ContentAPIGatewayRestApi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Description": "Content API for DynamoDB operations",
        "Name": {
          "Fn::Sub": [
            "${apiName}-${env}",
            {
              "apiName": {
                "Ref": "apiName"
              },
              "env": {
                "Ref": "env"
              }
            }
          ]
        },
        "Body": {
          "swagger": "2.0",
          "info": {
            "version": "2017-04-20T04:08:08Z"
          },
          "host": "apigateway.amazonaws.com",
          "basePath": "/prod",
          "schemes": [
            "https"
          ],
          "paths": {
            "/homepage": {
              "get": {
                "produces": [
                  "application/json"
                ],
                "responses": {
                  "200": {
                    "description": "200 response",
                    "schema": {
                      "$ref": "#/definitions/Empty"
                    }
                  }
                },
                "x-amazon-apigateway-integration": {
                  "responses": {
                    "default": {
                      "statusCode": "200"
                    }
                  },
                  "requestTemplates": {
                    "application/json": {
                      "Fn::Sub": [
                        "{\n  \"TableName\": \"${tableName}\",\n  \"FilterExpression\": \"#type = :type\",\n  \"ExpressionAttributeNames\": {\n    \"#type\": \"type\"\n  },\n  \"ExpressionAttributeValues\": {\n    \":type\": {\n      \"S\": \"homepage\"\n    }\n  }\n}",
                        {
                          "tableName": {
                            "Ref": "storagecontentdbName"
                          }
                        }
                      ]
                    }
                  },
                  "uri": {
                    "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:dynamodb:action/Scan"
                  },
                  "httpMethod": "POST",
                  "type": "aws"
                }
              }
            },
            "/counters": {
              "get": {
                "produces": [
                  "application/json"
                ],
                "responses": {
                  "200": {
                    "description": "200 response"
                  }
                },
                "x-amazon-apigateway-integration": {
                  "responses": {
                    "default": {
                      "statusCode": "200"
                    }
                  },
                  "requestTemplates": {
                    "application/json": {
                      "Fn::Sub": [
                        "{\n  \"TableName\": \"${tableName}\",\n  \"FilterExpression\": \"#type = :type\",\n  \"ExpressionAttributeNames\": {\n    \"#type\": \"type\"\n  },\n  \"ExpressionAttributeValues\": {\n    \":type\": {\n      \"S\": \"counters\"\n    }\n  }\n}",
                        {
                          "tableName": {
                            "Ref": "storagecontentdbName"
                          }
                        }
                      ]
                    }
                  },
                  "uri": {
                    "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:dynamodb:action/Scan"
                  },
                  "httpMethod": "POST",
                  "type": "aws"
                }
              }
            }
          },
          "definitions": {
            "Empty": {
              "type": "object"
            }
          }
        },
        "Policy": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": "*"
              },
              "Action": "execute-api:Invoke",
              "Resource": "arn:aws:execute-api:*:*:*"
            }
          ]
        }
      }
    },
    "ContentAPIRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "apigateway.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "DynamoDBAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:Scan",
                    "dynamodb:Query",
                    "dynamodb:GetItem",
                    "dynamodb:PutItem",
                    "dynamodb:UpdateItem",
                    "dynamodb:DeleteItem"
                  ],
                  "Resource": {
                    "Ref": "storagecontentdbArn"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "ContentAPIDeployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "DependsOn": "ContentAPIGatewayRestApi",
      "Properties": {
        "RestApiId": {
          "Ref": "ContentAPIGatewayRestApi"
        },
        "StageName": "prod"
      }
    }
  },
  "Outputs": {
    "RootUrl": {
      "Description": "Root URL of the API gateway",
      "Value": {
        "Fn::Sub": "https://${ContentAPIGatewayRestApi}.execute-api.${AWS::Region}.amazonaws.com/prod"
      }
    },
    "ApiName": {
      "Description": "API Friendly name",
      "Value": {
        "Ref": "apiName"
      }
    },
    "ApiId": {
      "Description": "API ID (prefix of API URL)",
      "Value": {
        "Ref": "ContentAPIGatewayRestApi"
      }
    }
  }
}