{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DynamoDB resource stack creation using Amplify CLI",
  "Parameters": {
    "tableName": {
      "Type": "String"
    },
    "partitionKeyName": {
      "Type": "String"
    },
    "partitionKeyType": {
      "Type": "String"
    },
    "sortKeyName": {
      "Type": "String"
    },
    "sortKeyType": {
      "Type": "String"
    },
    "gsi1PartitionKeyName": {
      "Type": "String"
    },
    "gsi1PartitionKeyType": {
      "Type": "String"
    },
    "gsi1SortKeyName": {
      "Type": "String"
    },
    "gsi1SortKeyType": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "DynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::Sub": [
            "${tableName}-${env}",
            {
              "tableName": {
                "Ref": "tableName"
              },
              "env": {
                "Ref": "env"
              }
            }
          ]
        },
        "KeySchema": [
          {
            "AttributeName": {
              "Ref": "partitionKeyName"
            },
            "KeyType": "HASH"
          },
          {
            "AttributeName": {
              "Ref": "sortKeyName"
            },
            "KeyType": "RANGE"
          }
        ],
        "AttributeDefinitions": [
          {
            "AttributeName": {
              "Ref": "partitionKeyName"
            },
            "AttributeType": {
              "Ref": "partitionKeyType"
            }
          },
          {
            "AttributeName": {
              "Ref": "sortKeyName"
            },
            "AttributeType": {
              "Ref": "sortKeyType"
            }
          },
          {
            "AttributeName": {
              "Ref": "gsi1PartitionKeyName"
            },
            "AttributeType": {
              "Ref": "gsi1PartitionKeyType"
            }
          },
          {
            "AttributeName": {
              "Ref": "gsi1SortKeyName"
            },
            "AttributeType": {
              "Ref": "gsi1SortKeyType"
            }
          }
        ],
        "GlobalSecondaryIndexes": [
          {
            "IndexName": "TypeIndex",
            "KeySchema": [
              {
                "AttributeName": {
                  "Ref": "gsi1PartitionKeyName"
                },
                "KeyType": "HASH"
              },
              {
                "AttributeName": {
                  "Ref": "gsi1SortKeyName"
                },
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "BillingMode": "PAY_PER_REQUEST"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "StreamSpecification": {
          "StreamViewType": "NEW_AND_OLD_IMAGES"
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "DynamoDBTable"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "DynamoDBTable",
          "Arn"
        ]
      }
    },
    "StreamArn": {
      "Value": {
        "Fn::GetAtt": [
          "DynamoDBTable",
          "StreamArn"
        ]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  }
}